            url: '@Url.Action("RenderAddToDriveModal", "Chatbot")',
            type: "POST",
            data: songId,
            contentType: "application/json",
            success: function(html) {
                $("#modalContainer").html(html);
                $("#addToDriveModal").modal('show');
            }
        });
    }

