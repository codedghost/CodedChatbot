@model CoreCodedChatbot.Library.Models.View.LoggedInTwitchUser;


<br />
<div class="alert alert-dark">
    @if (User.Identity.IsAuthenticated)
    {
        <text>Welcome </text>@Model.Username<text>!</text>
        <span class="float-right">
            <button type="button" class="btn btn-sm btn-success" onclick="showRequestModal()">Request</button>
        </span>
    }
    else
    {
        @Html.ActionLink("Login", "Index", "Login") <text> with Twitch to access more features!</text>
    }
</div>