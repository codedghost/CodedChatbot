@model CoreCodedChatbot.Library.Models.View.LoggedInTwitchUser

<div class="modal fade" id="convertBytesModal" tabindex="-1" role="dialog" aria-labelledby="convertBytesModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="convertBytesModalLabel">Convert your Bytes to VIPs</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>How many Bytes would you like to convert to VIPs?</p>
            </div>
            <table>
                <tbody>
                <tr>
                    <td>
                        Your Bytes: @Model.Bytes
                    </td>
                    <td>
                        Your Vips: @Model.Vips
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.EditorFor(m => m.Bytes, new { id = "bytesToConvert"})
                    </td>
                </tr>
                </tbody>
            </table>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-primary" onclick="convertBytes()">Yes</button>
            </div>
        </div>
    </div>
</div>

<script>
    function convertBytes() {
        var bytesToConvert = $("#bytesToConvert").val;

        $.ajax({
            url: '@Url.Action("ConvertBytes", "Chatbot")',
            type: "POST",
            contentType: "application/json",
            data: bytesToConvert,
            success: function () {
                location.reload();
            }
        });
    }
</script>